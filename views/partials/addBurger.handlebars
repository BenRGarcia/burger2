<form id="form-add">
  <div class="form-group list-bg">
    <label for="burger" class="h2">
      1) Add a burger you'd like to eat
    </label>
    <input
      id="burger"
      type="text"
      class="form-control mx-auto mb-2"
      placeholder="ex. Double Cheeseburger"
      pattern="[\w ]{1,64}"
      required
    >
    <input
      id="customer"
      type="text"
      class="form-control mx-auto"
      placeholder="ex. John Smith (name)"
      pattern="[\w ]{1,64}"
      required
    >
    <small class="d-block">
      Valid characters: letters, numbers, and spaces
    </small>
    <button
      type="submit"
      class="btn"
    >
      Submit
    </button>
  </div>
</form>